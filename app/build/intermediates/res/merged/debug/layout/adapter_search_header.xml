<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <LinearLayout style="@style/StyleLinear">

        <TextView
            style="@style/StyleTextLeft"
            android:layout_marginRight="5dp"
            android:text="开始时间:" />

        <TextView
            android:id="@+id/tv_startstart_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/common_color"
            android:textSize="@dimen/common_text_size" />

        <Spinner
            android:id="@+id/spinner_start_year"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1" />

        <Spinner
            android:id="@+id/spinner_start_month"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1" />

        <Spinner
            android:id="@+id/spinner_start_day"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout style="@style/StyleLinear">

        <TextView
            style="@style/StyleTextLeft"
            android:layout_marginRight="5dp"
            android:text="结束时间:" />

        <TextView
            android:id="@+id/tv_endend_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/common_color"
            android:textSize="@dimen/common_text_size" />

        <Spinner
            android:id="@+id/spinner_end_year"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1" />

        <Spinner
            android:id="@+id/spinner_end_month"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1" />

        <Spinner
            android:id="@+id/spinner_end_day"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout style="@style/StyleLinear">

        <EditText
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/et_seek_content"
            style="@style/StyleEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="20" />

        <Button
            android:id="@+id/bt_search"
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:background="@drawable/button_style"
            android:text="搜索" />
    </LinearLayout>

</LinearLayout>
