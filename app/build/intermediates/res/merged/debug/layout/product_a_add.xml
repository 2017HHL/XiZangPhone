<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/view_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/common_padding_bottom"
        android:paddingLeft="@dimen/common_padding_left"
        android:paddingRight="@dimen/common_padding_right"
        android:paddingTop="@dimen/common_padding_top"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="搜索" />

            <LinearLayout style="@style/StyleLinear">

                <TextView
                    style="@style/StyleTextLeft"
                    android:layout_marginRight="5dp"
                    android:text="检疫证编号:" />

                <EditText
                    android:id="@+id/et_quarantine_no"
                    style="@style/StyleEdit"
                    android:inputType="number"
                    android:maxLength="10" />
            </LinearLayout>

            <LinearLayout style="@style/StyleLinear">

                <TextView
                    style="@style/StyleTextLeft"
                    android:layout_marginRight="5dp"
                    android:text="货主:" />

                <EditText
                    android:id="@+id/et_user_name"
                    style="@style/StyleEdit"
                    android:hint="请输入货主姓名" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout style="@style/StyleLinear">

                    <TextView
                        style="@style/StyleTextLeft"
                        android:layout_marginRight="5dp"
                        android:text="联系电话:" />

                    <EditText
                        android:id="@+id/et_user_phone"
                        style="@style/StyleEdit"
                        android:hint="请输入电话号码"
                        android:inputType="number" />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout style="@style/StyleLinear">

                <TextView
                    style="@style/StyleTextLeft"
                    android:layout_marginRight="5dp"
                    android:text="产品名称:" />

                <Spinner
                    android:id="@+id/sp_prod_name1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                </Spinner>

                <Spinner
                    android:id="@+id/sp_prod_name2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                </Spinner>


            </LinearLayout>

            <LinearLayout style="@style/StyleLinear">

                <TextView
                    style="@style/StyleTextLeft"
                    android:layout_marginRight="5dp"
                    android:text="" />

                <Spinner
                    android:id="@+id/sp_prod_name3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                </Spinner>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="" />

            </LinearLayout>

            <LinearLayout style="@style/StyleLinear">

                <TextView
                    style="@style/StyleTextLeft"
                    android:layout_marginRight="5dp"
                    android:text="数量及单位:" />

                <EditText
                    android:id="@+id/et_product_count"
                    style="@style/StyleEdit"
                    android:layout_width="wrap_content"
                    android:layout_weight="0"
                    android:hint="请输入数量"
                    android:minWidth="150dp" />

                <Spinner
                    android:id="@+id/sp_product_danwei"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout style="@style/StyleLinear">

                    <TextView
                        style="@style/StyleTextLeft"
                        android:layout_marginRight="5dp"
                        android:text="生产单位名称:" />

                    <EditText
                        android:id="@+id/et_start_place"
                        style="@style/StyleEdit"
                        android:hint="请填写生产单位名称" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout style="@style/StyleLinear">

                <TextView
                    style="@style/StyleTextLeft"
                    android:layout_marginRight="5dp"
                    android:text="地址:" />

                <Spinner
                    android:id="@+id/sp_qiyun_sheng"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <Spinner
                    android:id="@+id/sp_qiyun_shi"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />


            </LinearLayout>


            <LinearLayout style="@style/StyleLinear">

                <TextView
                    style="@style/StyleTextLeft"
                    android:layout_marginRight="5dp"
                    android:text="" />

                <Spinner
                    android:id="@+id/sp_qiyun_xian"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="" />

            </LinearLayout>

            <LinearLayout style="@style/StyleLinear">

                <EditText
                    android:id="@+id/et_qiyun_xiang"
                    style="@style/StyleEdit" />
            </LinearLayout>


            <LinearLayout style="@style/StyleLinear">

                <TextView
                    style="@style/StyleTextLeft"
                    android:layout_marginRight="5dp"
                    android:text="目的地:" />

                <Spinner
                    android:id="@+id/sp_daoda_sheng"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <Spinner
                    android:id="@+id/sp_daoda_shi"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />


            </LinearLayout>


            <LinearLayout style="@style/StyleLinear">

                <TextView
                    style="@style/StyleTextLeft"
                    android:layout_marginRight="5dp"
                    android:text="" />

                <Spinner
                    android:id="@+id/sp_daoda_xian"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="" />

            </LinearLayout>

            <LinearLayout style="@style/StyleLinear">

                <EditText
                    android:id="@+id/et_daoda_xiang"
                    style="@style/StyleEdit" />
            </LinearLayout>


            <LinearLayout style="@style/StyleLinear">

                <TextView
                    style="@style/StyleTextLeft"
                    android:layout_marginRight="5dp"
                    android:text="承运人:" />

                <EditText
                    android:id="@+id/et_carrier_name"
                    style="@style/StyleEdit"
                    android:hint="请输入承运人姓名" />
            </LinearLayout>

            <LinearLayout style="@style/StyleLinear">

                <TextView
                    style="@style/StyleTextLeft"
                    android:layout_marginRight="5dp"
                    android:text="联系电话:" />

                <EditText
                    android:id="@+id/et_carrier_phone"
                    style="@style/StyleEdit"
                    android:hint="请输入承运人电话"
                    android:inputType="number" />
            </LinearLayout>

            <LinearLayout style="@style/StyleLinear">

                <TextView
                    style="@style/StyleTextLeft"
                    android:layout_marginRight="5dp"
                    android:text="运载工具号:" />

                <EditText
                    android:id="@+id/et_carrier_util_number"
                    style="@style/StyleEdit"
                    android:hint="请输入运载工具号" />
            </LinearLayout>

            <LinearLayout style="@style/StyleLinear">

                <TextView
                    style="@style/StyleTextLeft"
                    android:layout_marginRight="5dp"
                    android:text="运载前消毒:" />

                <EditText
                    android:id="@+id/et_steriallier_method"
                    style="@style/StyleEdit"
                    android:hint="请输入消毒方式" />

            </LinearLayout>

            <LinearLayout style="@style/StyleLinear">

                <TextView
                    style="@style/StyleTextLeft"
                    android:layout_marginRight="5dp"
                    android:text="运输方式:" />

                <RadioGroup
                    android:id="@+id/rg_transportation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_railway"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:checked="true"
                        android:text="铁路"
                        android:textSize="@dimen/common_text_size" />

                    <RadioButton
                        android:id="@+id/rb_highway"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:focusable="false"
                        android:text="公路"
                        android:textSize="@dimen/common_text_size" />

                    <RadioButton
                        android:id="@+id/rb_waveway"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:focusable="false"
                        android:text="水路"
                        android:textSize="@dimen/common_text_size" />

                    <RadioButton
                        android:id="@+id/rb_aviation"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:focusable="false"
                        android:text="航空"
                        android:textSize="@dimen/common_text_size" />
                </RadioGroup>
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="10dp"
                android:background="@color/xixian" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="本批动物产品经检疫合格,应于"
                    android:textColor="@color/black"
                    android:textSize="13sp" />

                <Spinner
                    android:id="@+id/sp_youxiangday"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="日内到达有效。"
                    android:textColor="@color/black"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout style="@style/StyleLinear">

                <TextView
                    style="@style/StyleTextLeft"
                    android:layout_marginRight="5dp"
                    android:text="备注:" />

                <EditText
                    android:id="@+id/et_remark"
                    style="@style/StyleEdit"
                    android:singleLine="false" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp">

            </View>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/xixian" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp">

            </View>

            <LinearLayout style="@style/StyleLinear">

                <TextView
                    style="@style/StyleTextLeft"
                    android:layout_marginRight="5dp"
                    android:minWidth="120dp"
                    android:text="官方兽医签字:" />

                <EditText
                    android:id="@+id/et_signature_checked"
                    style="@style/StyleEdit" />
            </LinearLayout>

            <LinearLayout style="@style/StyleLinear">

                <TextView
                    style="@style/StyleTextLeft"
                    android:layout_marginRight="5dp"
                    android:minWidth="120dp"
                    android:text="动物卫生监督所电话:" />

                <EditText
                    android:id="@+id/et_check_phone"
                    style="@style/StyleEdit"
                    android:hint="请输入动物卫生监督所电话"
                    android:inputType="number" />
            </LinearLayout>

            <LinearLayout style="@style/StyleLinear">

                <TextView
                    style="@style/StyleTextLeft"
                    android:layout_marginRight="5dp"
                    android:minWidth="120dp"
                    android:text="签发日期:" />

                <TextView
                    android:id="@+id/tv_prove_time"
                    style="@style/StyleEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/common_color"
                    android:textSize="@dimen/common_text_size" />
            </LinearLayout>

            <Button
                android:id="@+id/bt_baocun"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/button_style"
                android:gravity="center"
                android:text="保存"
                android:textColor="@color/black"
                android:textSize="@dimen/common_text_size" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>