<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="检疫地点:"
            android:layout_marginRight="10dp"
            android:layout_gravity="center"
            android:textSize="@dimen/common_tv_size_title"
            android:textColor="#3399cc" />

        <EditText
            android:id="@+id/et_jianyi_place"
            android:layout_width="0dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="请输入检疫地点"
            android:textColorHint="#FF6666"
            android:textSize="@dimen/common_et_size" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="检疫日期:"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:textSize="@dimen/common_tv_size_title"

            android:textColor="#3399cc" />
        <EditText
            android:id="@+id/et_jianyi_time"
            android:layout_width="0dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:focusable="false"
            android:gravity="center"
            android:textSize="@dimen/common_et_size" />

        <Button
            android:id="@+id/bt_jianyi_time"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="#0099ff"
            android:tag="1"
            android:text="选择日期"
            android:textColor="#ffffff"
            android:textSize="@dimen/common_tv_size" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="处理日期:"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:textSize="@dimen/common_tv_size_title"
            android:textColor="#3399cc" />

        <EditText
            android:id="@+id/et_process_time"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center"
            android:focusable="false"
            android:textSize="@dimen/common_et_size" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="检疫结果:"
            android:textColor="#3399cc"
            android:layout_marginRight="10dp"
            android:layout_gravity="center"
            android:textSize="@dimen/common_tv_size_title" />

        <Spinner
            android:id="@+id/spinner_jianyi_result"
            android:layout_width="0dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/common_et_size" />
    </LinearLayout>

</LinearLayout>