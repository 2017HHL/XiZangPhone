<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fab_sheet"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:elevation="4dp"
    app:cardMaxElevation="4dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_gravity="center"
                android:text="签发日期(开始日期):"
                android:layout_width="60dp"
                android:textSize="12sp"
                android:layout_height="wrap_content" />
            <Spinner
                android:gravity="center"
                android:id="@+id/spinner_start_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="年"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Spinner
                android:gravity="center"
                android:id="@+id/spinner_start_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="月"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Spinner
                android:gravity="center"
                android:id="@+id/spinner_start_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="日"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="签发日期(结束日期):"
                android:layout_gravity="center"
                android:layout_width="60dp"
                android:textSize="12sp"
                android:layout_height="wrap_content" />
            <Spinner
                android:gravity="center"
                android:id="@+id/spinner_end_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="年"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Spinner
                android:gravity="center"
                android:id="@+id/spinner_end_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="月"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Spinner
                android:gravity="center"
                android:id="@+id/spinner_end_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="日"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="条件:"
                android:textSize="12sp"
                android:layout_gravity="center"
                android:layout_width="60dp"
                android:layout_height="wrap_content" />
            <Spinner
                android:id="@+id/spinner_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="内容:"
                android:layout_gravity="center"
                android:layout_width="60dp"
                android:textSize="12sp"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/et_search"
                android:singleLine="true"
                android:maxLines="1"
                android:imeOptions="actionSearch"
                android:layout_width="0dp"
                android:inputType="text"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/bt_clear"
                android:text="清空"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <Button
            android:id="@+id/bt_search"
            android:text="搜索"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</android.support.v7.widget.CardView>