<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/common_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="11dp"
            android:paddingRight="11dp">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="11dp"
                android:paddingRight="11dp">

                <TableRow
                    style="@style/Common_TableRow_Style"
                    android:layout_marginTop="2dp">

                    <TextView
                        style="@style/Common_TextView_Style_Bold"
                        android:text="类型:" />

                    <TextView
                        android:id="@+id/tv_select_type"
                        style="@style/Common_TextView_Style_With_Bg"
                        android:text="出省" />

                    <Button
                        android:id="@+id/bt_select_type"
                        style="@style/Common_Button_Style"
                        android:text="选择类型" />
                </TableRow>

                <TableRow
                    style="@style/Common_TableRow_Style"
                    android:layout_marginTop="2dp">

                    <TextView
                        style="@style/Common_TextView_Style_Bold"
                        android:text="货主:" />

                    <EditText
                        android:id="@+id/et_user_name"
                        style="@style/Common_Edittext_Style"
                        android:hint="请输入货主姓名" />

                    <Button
                        android:id="@+id/bt_select_name"
                        style="@style/Common_Button_Style"
                        android:text="查询" />
                </TableRow>

                <TableRow
                    style="@style/Common_TableRow_Style"
                    android:layout_marginTop="2dp">

                    <TextView
                        style="@style/Common_TextView_Style_Bold"
                        android:text="联系电话:" />

                    <EditText
                        android:id="@+id/et_user_phone"
                        style="@style/Common_Edittext_Style_Number"
                        android:hint="请输入联系电话" />
                </TableRow>

                <TableRow
                    style="@style/Common_TableRow_Style"
                    android:layout_marginTop="2dp">

                    <TextView
                        style="@style/Common_TextView_Style_Bold"
                        android:text="动物种类:" />

                    <TextView
                        android:id="@+id/tv_anim_type"
                        style="@style/Common_TextView_Style_With_Bg"
                        android:text="出省" />

                    <Button
                        android:id="@+id/bt_select_anim_type"
                        style="@style/Common_Button_Style"
                        android:text="选择" />
                </TableRow>


                <TableRow
                    style="@style/Common_TableRow_Style"
                    android:layout_marginTop="2dp">

                    <TextView
                        style="@style/Common_TextView_Style_Bold"
                        android:text="数量:" />

                    <EditText
                        android:id="@+id/et_number"
                        style="@style/Common_Edittext_Style_Number"
                        android:hint="请输入数量" />

                    <TextView
                        android:id="@+id/tv_anim_unit"
                        style="@style/Common_TextView_Style_Bold"
                        android:layout_gravity="left|center_vertical"
                        android:layout_weight="1"
                        android:text="只" />
                </TableRow>

                <TableRow
                    style="@style/Common_TableRow_Style"
                    android:layout_marginTop="2dp">

                    <TextView
                        style="@style/Common_TextView_Style_Bold"
                        android:text="来源:" />

                    <TextView
                        android:id="@+id/tv_source"
                        style="@style/Common_TextView_Style_With_Bg"
                        android:text="出省" />

                    <Button
                        android:id="@+id/bt_source"
                        style="@style/Common_Button_Style"
                        android:text="选择类型" />
                </TableRow>
                <TableRow
                    android:visibility="gone"
                    android:id="@+id/row_source_number"
                    style="@style/Common_TableRow_Style"
                    android:layout_marginTop="2dp">

                    <TextView
                        android:id="@+id/tv_source_number"
                        android:maxWidth="90dp"
                        style="@style/Common_TextView_Style_Bold"
                        android:text="捕猎许可证号:" />

                    <EditText
                        android:id="@+id/et_source_number"
                        style="@style/Common_Edittext_Style"
                        android:textColorHint="@android:color/black" />
                </TableRow>

                <TableRow
                    style="@style/Common_TableRow_Style"
                    android:layout_marginTop="2dp">

                    <TextView
                        style="@style/Common_TextView_Style_Bold"
                        android:text="用途:" />

                    <TextView
                        android:id="@+id/tv_useage"
                        style="@style/Common_TextView_Style_With_Bg"
                        android:text="出省" />

                    <Button
                        android:id="@+id/bt_useage"
                        style="@style/Common_Button_Style"
                        android:text="选择类型" />
                </TableRow>

                <TableRow
                    style="@style/Common_TableRow_Style"
                    android:layout_marginTop="2dp">

                    <TextView
                        style="@style/Common_TextView_Style_Bold"
                        android:text="启运地点:" />

                    <TextView
                        android:id="@+id/tv_start_place"
                        style="@style/Common_TextView_Style_With_Bg"
                        android:text="出省" />

                    <Button
                        android:id="@+id/bt_start_place"
                        style="@style/Common_Button_Style"
                        android:text="选择类型" />
                </TableRow>

                <TableRow
                    style="@style/Common_TableRow_Style"
                    android:layout_marginTop="2dp">

                    <TextView
                        style="@style/Common_TextView_Style_Bold"
                        android:text="启运地点类别:" />

                    <TextView
                        android:id="@+id/tv_start_place_type"
                        style="@style/Common_TextView_Style_With_Bg"
                        android:text="出省" />

                    <Button
                        android:id="@+id/bt_start_place_type"
                        style="@style/Common_Button_Style"
                        android:text="选择类型" />
                </TableRow>

                <TableRow
                    style="@style/Common_TableRow_Style"
                    android:layout_marginTop="2dp">

                    <EditText
                        android:id="@+id/et_start_place_xiang"
                        style="@style/Common_Edittext_Style"
                        android:hint="请输入" />

                    <TextView
                        style="@style/Common_TextView_Style_Bold"
                        android:layout_gravity="left|center_vertical"
                        android:text="乡(镇)" />

                    <EditText
                        android:id="@+id/et_start_place_tuzaichang"
                        style="@style/Common_Edittext_Style"
                        android:hint="请输入" />

                    <TextView
                        style="@style/Common_TextView_Style_Bold"
                        android:layout_gravity="left|center_vertical"
                        android:text="村(养殖场)" />
                </TableRow>

                <TableRow
                    style="@style/Common_TableRow_Style"
                    android:layout_marginTop="2dp">

                    <TextView
                        style="@style/Common_TextView_Style_Bold"
                        android:text="到达地点:" />

                    <TextView
                        android:id="@+id/tv_end_place"
                        style="@style/Common_TextView_Style_With_Bg"
                        android:text="出省" />

                    <Button
                        android:id="@+id/bt_end_place"
                        style="@style/Common_Button_Style"
                        android:text="选择" />
                </TableRow>

                <TableRow
                    style="@style/Common_TableRow_Style"
                    android:layout_marginTop="2dp">

                    <TextView
                        style="@style/Common_TextView_Style_Bold"
                        android:text="到达地点类别:" />

                    <TextView
                        android:id="@+id/tv_end_place_type"
                        style="@style/Common_TextView_Style_With_Bg"
                        android:text="出省" />

                    <Button
                        android:id="@+id/bt_end_place_type"
                        style="@style/Common_Button_Style"
                        android:text="选择" />
                </TableRow>

                <TableRow
                    style="@style/Common_TableRow_Style"
                    android:layout_marginTop="2dp">

                    <EditText
                        android:id="@+id/et_end_place_xiang"
                        style="@style/Common_Edittext_Style"
                        android:hint="请输入" />

                    <TextView
                        style="@style/Common_TextView_Style_Bold"
                        android:layout_gravity="left|center_vertical"
                        android:text="乡(镇)" />

                    <EditText
                        android:id="@+id/et_end_place_tuzaichang"
                        style="@style/Common_Edittext_Style"
                        android:hint="请输入" />

                    <TextView
                        style="@style/Common_TextView_Style_Bold"
                        android:layout_gravity="left|center_vertical"
                        android:text="村(屠宰场)" />
                </TableRow>

                <TableRow
                    style="@style/Common_TableRow_Style"
                    android:layout_marginTop="2dp">

                    <TextView
                        style="@style/Common_TextView_Style_Bold"
                        android:text="启运时间:" />

                    <TextView
                        android:id="@+id/tv_start_time"
                        style="@style/Common_TextView_Style_With_Bg"
                        android:text="出省" />

                    <Button
                        android:id="@+id/bt_start_time"
                        style="@style/Common_Button_Style"
                        android:text="选择" />
                </TableRow>

                <TableRow
                    style="@style/Common_TableRow_Style"
                    android:layout_marginTop="2dp">

                    <TextView
                        style="@style/Common_TextView_Style_Bold"
                        android:text="承运人:" />

                    <EditText
                        android:id="@+id/et_carrier_name"
                        style="@style/Common_Edittext_Style"
                        android:textColorHint="@android:color/black" />
                </TableRow>

                <TableRow
                    style="@style/Common_TableRow_Style"
                    android:layout_marginTop="2dp">

                    <TextView
                        style="@style/Common_TextView_Style_Bold"
                        android:text="联系电话:" />

                    <EditText
                        android:id="@+id/et_carrier_phone"
                        style="@style/Common_Edittext_Style_Number"
                        android:textColorHint="@android:color/black" />
                </TableRow>

                <TableRow
                    style="@style/Common_TableRow_Style"
                    android:layout_marginTop="2dp">

                    <TextView
                        style="@style/Common_TextView_Style_Bold"
                        android:text="运载工具号:" />

                    <EditText
                        android:id="@+id/et_util_number"
                        style="@style/Common_Edittext_Style"
                        android:textColorHint="@android:color/black" />
                </TableRow>

                <TableRow
                    style="@style/Common_TableRow_Style"
                    android:layout_marginTop="2dp">

                    <TextView
                        style="@style/Common_TextView_Style_Bold"
                        android:text="申报时间:" />

                    <TextView
                        android:id="@+id/tv_apply_time"
                        style="@style/Common_TextView_Style_With_Bg" />
                </TableRow>

                <TableRow
                    style="@style/Common_TableRow_Style"
                    android:layout_marginTop="2dp">

                    <TextView
                        style="@style/Common_TextView_Style_Bold"
                        android:text="装载前经:" />

                    <EditText
                        android:id="@+id/et_sterilize"
                        style="@style/Common_Edittext_Style"
                        android:hint="请输入消毒方式" />
                </TableRow>

                <TableRow style="@style/Common_TableRow_Style">

                    <TextView
                        style="@style/Common_TextView_Style_Bold"
                        android:text="运输方式:" />

                    <CheckBox
                        android:id="@+id/checkbox1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="公路" />

                    <CheckBox
                        android:id="@+id/checkbox2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="铁路" />

                    <CheckBox
                        android:id="@+id/checkbox3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="航空" />

                    <CheckBox
                        android:id="@+id/checkbox4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="水路" />
                </TableRow>

                <TableRow style="@style/Common_TableRow_Style">

                    <TextView
                        style="@style/Common_TextView_Style_Bold"
                        android:text="牲畜耳标号:" />

                    <TextView
                        android:id="@+id/tv_erbiao"
                        style="@style/Common_TextView_Style_With_Bg"
                        android:minHeight="60dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        />
                </TableRow>
            </TableLayout>

            <Button
                android:id="@+id/bt_erbiao"
                style="@style/Common_Button_Style"
                android:layout_width="match_parent"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:text="耳标录入" />

            <Button
                android:id="@+id/bt_save"
                style="@style/Common_Button_Style"
                android:layout_width="match_parent"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="10dp"
                android:text="保存" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
