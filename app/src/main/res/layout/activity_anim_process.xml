<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_anim_process"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <include layout="@layout/common_title"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:minWidth="100dp"
                    android:layout_height="wrap_content"
                    android:text="申报单编号:"
                    android:textColor="#3399cc"
                    android:textSize="@dimen/common_tv_size_title" />

                <TextView
                    android:id="@+id/tv_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/common_tv_size"
                    android:background="@drawable/s1"
                    android:gravity="center" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:minWidth="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="货  主:"
                    android:textColor="#3399cc"
                    android:textSize="@dimen/common_tv_size_title" />

                <TextView
                    android:id="@+id/tv_user_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/common_tv_size"
                    android:background="@drawable/s1"
                    android:gravity="center" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:minWidth="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="联系电话:"
                    android:textColor="#3399cc"
                    android:textSize="@dimen/common_tv_size_title" />

                <TextView
                    android:id="@+id/tv_user_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/common_tv_size"
                    android:background="@drawable/s1"
                    android:gravity="center" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:minWidth="100dp"
                    android:layout_height="wrap_content"
                    android:text="动物种类:"
                    android:textColor="#3399cc"
                    android:layout_gravity="center"
                    android:textSize="@dimen/common_tv_size_title" />

                <TextView
                    android:id="@+id/tv_anim_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/s1"
                    android:gravity="center"
                    android:textSize="@dimen/common_tv_size" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:minWidth="100dp"
                    android:layout_height="wrap_content"
                    android:text="来　源:"
                    android:textColor="#3399cc"
                    android:layout_gravity="center"
                    android:textSize="@dimen/common_tv_size_title" />

                <TextView
                    android:id="@+id/tv_source"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/s1"
                    android:gravity="center"
                    android:textSize="@dimen/common_tv_size" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="100dp"
                    android:text="用　途:"
                    android:layout_gravity="center"
                    android:textColor="#3399cc"
                    android:textSize="@dimen/common_tv_size_title" />

                <TextView
                    android:id="@+id/tv_useage"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textSize="@dimen/common_tv_size"
                    android:layout_height="wrap_content"
                    android:background="@drawable/s1"
                    android:gravity="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="数量及单位:"
                    android:layout_gravity="center"
                    android:textColor="#3399cc"
                    android:textSize="@dimen/common_tv_size_title" />

                <TextView
                    android:id="@+id/tv_number"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textSize="@dimen/common_tv_size"
                    android:layout_height="wrap_content"
                    android:background="@drawable/s1"
                    android:gravity="center" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:minWidth="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="启运地点:"
                    android:textColor="#3399cc"
                    android:textSize="@dimen/common_tv_size_title" />

                <TextView
                    android:id="@+id/tv_start_place"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/s1"
                    android:gravity="center"
                    android:textSize="@dimen/common_tv_size" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:minWidth="100dp"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:textColor="#3399cc"
                    android:textSize="@dimen/common_tv_size_title"
                    android:text="启运地点类别:" />


                <TextView
                    android:id="@+id/tv_start_place_type"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:background="@drawable/s1"
                    android:textSize="@dimen/common_tv_size" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal" >

                <EditText
                    android:id="@+id/et_start_place_xiang"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="30dp"
                    android:background="@drawable/s1"
                    android:focusable="false"
                    android:gravity="center"
                    android:textSize="@dimen/common_et_size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="乡(镇)"
                    android:textColor="#3399cc"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/et_start_place_tuzaichang"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="30dp"
                    android:background="@drawable/s1"
                    android:focusable="false"
                    android:gravity="center"
                    android:textSize="@dimen/common_et_size" />

                <TextView
                    android:id="@+id/tv_start_place_country"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="村"
                    android:textColor="#3399cc"
                    android:textSize="@dimen/common_tv_size_title" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:minWidth="100dp"
                    android:layout_height="wrap_content"
                    android:text="到达地点:"
                    android:layout_gravity="center"
                    android:textColor="#3399cc"
                    android:textSize="@dimen/common_tv_size_title" />

                <TextView
                    android:id="@+id/tv_end_place"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/s1"
                    android:gravity="center"
                    android:textSize="@dimen/common_tv_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:minWidth="100dp"
                    android:layout_height="wrap_content"
                    android:textColor="#3399cc"
                    android:layout_gravity="center"
                    android:textSize="@dimen/common_tv_size_title"
                    android:text="到达地点类别:" />


                <TextView
                    android:id="@+id/tv_end_place_type"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:background="@drawable/s1"
                    android:textSize="@dimen/common_tv_size" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <EditText
                    android:id="@+id/et_end_place_xiang"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:focusable="false"
                    android:layout_height="30dp"
                    android:background="@drawable/s1"
                    android:gravity="center"
                    android:textSize="@dimen/common_et_size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="乡(镇)"
                    android:layout_gravity="center"
                    android:textColor="#3399cc"
                    android:textSize="@dimen/common_tv_size_title" />

                <EditText
                    android:id="@+id/et_end_place_tuzaichang"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:focusable="false"
                    android:layout_height="30dp"
                    android:background="@drawable/s1"
                    android:gravity="center"
                    android:textSize="@dimen/common_et_size" />

                <TextView
                    android:id="@+id/tv_end_place_country"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="村"
                    android:layout_gravity="center"
                    android:textColor="#3399cc"
                    android:textSize="@dimen/common_tv_size_title" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/lin_carrier_name"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:minWidth="100dp"
                    android:layout_height="wrap_content"
                    android:text="承 运 人:"
                    android:textColor="#3399cc"
                    android:textSize="@dimen/common_tv_size_title" />

                <TextView
                    android:id="@+id/tv_carrier_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/common_tv_size"
                    android:background="@drawable/s1"
                    android:gravity="center" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/lin_carrier_phone"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:minWidth="100dp"
                    android:layout_height="wrap_content"
                    android:text="联系电话:"
                    android:textColor="#3399cc"
                    android:textSize="@dimen/common_tv_size_title" />

                <TextView
                    android:id="@+id/tv_carrier_phone"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:textSize="@dimen/common_tv_size"
                    android:background="@drawable/s1"
                    android:gravity="center" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/lin_method"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:minWidth="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="运输方式:"
                    android:textColor="#3399cc"
                    android:textSize="@dimen/common_tv_size_title" />

                <TextView
                    android:id="@+id/tv_method"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:textSize="@dimen/common_tv_size"
                    android:background="@drawable/s1"
                    android:gravity="center" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/lin_util_number"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:minWidth="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="运载工具号"
                    android:textColor="#3399cc"
                    android:textSize="@dimen/common_tv_size_title" />

                <TextView
                    android:id="@+id/tv_util_number"
                    android:layout_gravity="center"
                    android:textSize="@dimen/common_tv_size"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/s1"
                    android:gravity="center" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/lin_sterilize"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:minWidth="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="装载前经："
                    android:textColor="#3399cc"
                    android:textSize="@dimen/common_tv_size_title" />

                <TextView
                    android:id="@+id/tv_sterilize"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textSize="@dimen/common_tv_size"
                    android:layout_height="wrap_content"
                    android:background="@drawable/s1"
                    android:gravity="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="消毒"
                    android:layout_gravity="center"
                    android:textSize="@dimen/common_tv_size_title"
                    android:textColor="#3399cc" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:minWidth="100dp"
                    android:layout_height="wrap_content"
                    android:text="申报日期:"
                    android:layout_gravity="center"
                    android:textColor="#3399cc"
                    android:textSize="@dimen/common_tv_size_title" />

                <TextView
                    android:id="@+id/tv_apply_time"
                    android:textSize="@dimen/common_tv_size"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/s1"
                    android:gravity="center" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/lin_erbiao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:minWidth="100dp"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:text="牲畜耳标号:"
                    android:textColor="#3399cc"
                    android:textSize="@dimen/common_tv_size_title" />

                <TextView
                    android:id="@+id/tv_erbiao"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="100dp"
                    android:padding="5dp"
                    android:background="@drawable/s1"
                    android:gravity="center"
                    android:textSize="@dimen/common_tv_size" />
            </LinearLayout>

            <RadioGroup
                android:id="@+id/rg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rb_accept"
                    android:checked="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="受理" />

                <RadioButton
                    android:id="@+id/rb_no_accept"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="不受理" />
            </RadioGroup>
            <LinearLayout
                android:id="@+id/lin_group"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="官方兽医:"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="#3399cc" />

                <EditText
                    android:id="@+id/et_guanfang_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:hint="请输入官方兽医"
                    android:textColorHint="#FF6666"
                    android:textSize="@dimen/common_et_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="动物卫生监督所联系电话:"
                    android:textColor="#3399cc" />

                <EditText
                    android:id="@+id/et_guanfang_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:digits="-0123456789"
                    android:hint="请输入联系电话"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="14"
                    android:textColorHint="#FF6666"
                    android:textSize="@dimen/common_et_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="备  注 :"
                    android:textColor="#3399cc" />

                <EditText
                    android:id="@+id/et_remark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="@dimen/common_et_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/bt_save"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_weight="1"
                    android:background="@drawable/bt_bg_blue"
                    android:text="保存"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/common_tv_size" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
