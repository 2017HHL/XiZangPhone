<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/view_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/common_padding_bottom"
        android:paddingLeft="@dimen/common_padding_left"
        android:paddingRight="@dimen/common_padding_right"
        android:paddingTop="@dimen/common_padding_top">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout style="@style/StyleLinear">

                <TextView
                    style="@style/StyleTextLeft"
                    android:layout_marginRight="5dp"
                    android:text="检疫证号:" />

                <TextView
                    android:id="@+id/et_quarantine_no"
                    style="@style/StyleEdit"/>

            </LinearLayout>

            <!--<LinearLayout style="@style/StyleLinear">-->

                <!--<TextView-->
                    <!--style="@style/StyleTextLeft"-->
                    <!--android:layout_marginRight="5dp"-->
                    <!--android:text="搜索:" />-->

                <!--<EditText-->
                    <!--android:id="@+id/et_sousuo"-->
                    <!--style="@style/StyleEdit"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content" />-->

            <!--</LinearLayout>-->


            <LinearLayout style="@style/StyleLinear">

                <TextView
                    style="@style/StyleTextLeft"
                    android:layout_marginRight="5dp"
                    android:text="货主:" />

                <TextView
                    android:id="@+id/et_user_name"
                    style="@style/StyleEdit"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout style="@style/StyleLinear">

                    <TextView
                        android:id="@+id/textView2"
                        style="@style/StyleTextLeft"
                        android:layout_marginRight="5dp"
                        android:text="产品名称:" />

                    <TextView
                        android:id="@+id/et_product_name"
                        style="@style/StyleEdit" />

                </LinearLayout>

            </LinearLayout>


            <LinearLayout style="@style/StyleLinear">

                <TextView
                    style="@style/StyleTextLeft"
                    android:layout_marginRight="5dp"
                    android:text="数量及单位:" />

                <TextView
                    android:id="@+id/et_anim_count"
                    style="@style/StyleEdit"
                    android:layout_width="wrap_content"
                    android:layout_weight="0"
                    android:maxLength="5"
                    android:minWidth="150dp" />

                <!--<Spinner-->
                    <!--android:id="@+id/sp_product_danwei"-->
                    <!--android:layout_width="100dp"-->
                    <!--android:layout_height="wrap_content" />-->
                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_product_danwei"
                    android:textColor="@color/black"
                    android:layout_gravity="center"/>

            </LinearLayout>

            <LinearLayout style="@style/StyleLinear">

                <TextView
                    style="@style/StyleTextLeft"
                    android:layout_marginRight="5dp"
                    android:text="地址:" />

                <TextView
                    android:id="@+id/et_dizhi"
                    style="@style/StyleEdit"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout style="@style/StyleLinear">

                    <TextView
                        style="@style/StyleTextLeft"
                        android:layout_marginRight="5dp"
                        android:text="生产单位名称:" />

                    <TextView
                        android:id="@+id/et_start_place"
                        style="@style/StyleEdit" />

                </LinearLayout>

            </LinearLayout>


            <LinearLayout style="@style/StyleLinear">

                <TextView
                    style="@style/StyleTextLeft"
                    android:layout_marginRight="5dp"
                    android:text="产地:" />

                <TextView
                    android:id="@+id/et_product_area"
                    style="@style/StyleEdit"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout style="@style/StyleLinear">

                    <TextView
                        style="@style/StyleTextLeft"
                        android:layout_marginRight="5dp"
                        android:text="目的地:" />

                    <TextView
                        android:id="@+id/et_end_place"
                        style="@style/StyleEdit" />
                </LinearLayout>

            </LinearLayout>


            <LinearLayout style="@style/StyleLinear">

                <TextView
                    style="@style/StyleTextLeft"
                    android:layout_marginRight="5dp"
                    android:text="检疫标志号:" />

                <TextView
                    android:id="@+id/et_quarantine_flag_no"
                    style="@style/StyleEdit"/>

            </LinearLayout>


            <LinearLayout style="@style/StyleLinear">

                <TextView
                    style="@style/StyleTextLeft"
                    android:layout_marginRight="5dp"
                    android:text="备注:" />

                <TextView
                    android:id="@+id/et_remark"
                    style="@style/StyleEdit"
                    android:maxLines="10"
                    android:singleLine="false" />

            </LinearLayout>

            <LinearLayout style="@style/StyleLinear">

                <TextView
                    style="@style/StyleTextLeft"
                    android:layout_marginRight="5dp"
                    android:text="官方兽医签字:" />

                <TextView
                    android:id="@+id/et_signature_checked"
                    style="@style/StyleEdit"/>

            </LinearLayout>

            <LinearLayout style="@style/StyleLinear">

                <TextView
                    style="@style/StyleTextLeft"
                    android:layout_marginRight="5dp"
                    android:text="签发日期:" />

                <TextView
                    android:id="@+id/tv_prove_time"
                    style="@style/StyleEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/common_color"
                    android:textSize="@dimen/common_text_size" />

            </LinearLayout>

            <Button
                android:id="@+id/bt_baocun"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:background="@drawable/button_style"
                android:text="打印"
                android:textColor="@color/black"
                android:textSize="@dimen/common_text_size" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>