<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/view_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/common_padding_bottom"
        android:paddingLeft="@dimen/common_padding_left"
        android:paddingRight="@dimen/common_padding_right"
        android:paddingTop="@dimen/common_padding_top"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="搜索" />

            <LinearLayout style="@style/StyleLinear">

                <TextView
                    style="@style/StyleTextLeft"
                    android:layout_marginRight="5dp"
                    android:text="检疫证编号:" />

                <EditText
                    android:id="@+id/et_jianyizheng_bianhao"
                    style="@style/StyleEdit"
                    android:inputType="number"
                    android:maxLength="10" />
            </LinearLayout>

            <LinearLayout style="@style/StyleLinear">

                <TextView
                    style="@style/StyleTextLeft"
                    android:layout_marginRight="5dp"
                    android:text="货主:" />

                <EditText
                    android:id="@+id/et_huozhu_name"
                    style="@style/StyleEdit" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout style="@style/StyleLinear">

                    <TextView
                        style="@style/StyleTextLeft"
                        android:layout_marginRight="5dp"
                        android:text="联系电话:" />

                    <EditText
                        android:id="@+id/et_huozhu_phone"
                        style="@style/StyleEdit"
                        android:inputType="number" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout style="@style/StyleLinear">

                    <TextView
                        android:id="@+id/textView2"
                        style="@style/StyleTextLeft"
                        android:layout_marginRight="5dp"
                        android:text="动物种类:" />

                    <Spinner
                        android:id="@+id/sp_animal_type"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"></Spinner>

                    <Spinner
                        android:id="@+id/sp_animal_leixing"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"></Spinner>


                </LinearLayout>

                <LinearLayout style="@style/StyleLinear">

                    <TextView
                        style="@style/StyleTextLeft"
                        android:layout_marginRight="5dp"
                        android:text="单位:" />

                    <Spinner
                        android:id="@+id/sp_animal_danwei"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"></Spinner>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout style="@style/StyleLinear">

                <TextView
                    style="@style/StyleTextLeft"
                    android:layout_marginRight="5dp"
                    android:text="数量:" />

                <EditText
                    android:id="@+id/et_animal_number"
                    style="@style/StyleEdit"
                    android:layout_width="wrap_content"
                    android:layout_weight="0"
                    android:minWidth="150dp" />

            </LinearLayout>


            <LinearLayout style="@style/StyleLinear">

                <TextView
                    style="@style/StyleTextLeft"
                    android:layout_marginRight="5dp"
                    android:text="用途:" />

                <Spinner
                    android:id="@+id/sp_animal_yongtu"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout style="@style/StyleLinear">

                <TextView
                    style="@style/StyleTextLeft"
                    android:layout_marginRight="5dp"
                    android:text="起运地类别:" />

                <Spinner
                    android:id="@+id/sp_qiyun_type"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout style="@style/StyleLinear">

                    <TextView
                        style="@style/StyleTextLeft"
                        android:layout_marginRight="5dp"
                        android:text="启运地点:" />

                    <Spinner
                        android:id="@+id/sp_qiyun_shi"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="5dp"
                        android:gravity="center"
                        android:minWidth="40dp"
                        android:text="市（州）"
                        android:textColor="@color/common_color"
                        android:textSize="@dimen/common_text_size"
                        android:textStyle="bold" />

                    <Spinner
                        android:id="@+id/sp_qiyun_xian"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="5dp"
                        android:gravity="center"
                        android:minWidth="40dp"
                        android:text="县"
                        android:textColor="@color/common_color"
                        android:textSize="@dimen/common_text_size"
                        android:textStyle="bold" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout style="@style/StyleLinear">

                <EditText
                    android:id="@+id/et_start_village"
                    style="@style/StyleEdittwo" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:text="乡(镇)"
                    android:textColor="@color/black"
                    android:textSize="@dimen/common_text_size" />

                <EditText
                    android:id="@+id/et_start_other"
                    style="@style/StyleEdittwo" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:text="村"
                    android:textColor="@color/black"
                    android:textSize="@dimen/common_text_size" />

            </LinearLayout>

            <LinearLayout style="@style/StyleLinear">

                <TextView
                    style="@style/StyleTextLeft"
                    android:layout_marginRight="5dp"
                    android:text="到达地类别:" />

                <Spinner
                    android:id="@+id/sp_daoda_type"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout style="@style/StyleLinear">

                    <TextView
                        style="@style/StyleTextLeft"
                        android:layout_marginRight="5dp"
                        android:text="到达地点:" />

                    <Spinner
                        android:id="@+id/sp_daoda_shi"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="5dp"
                        android:gravity="center"
                        android:minWidth="40dp"
                        android:text="市（州）"
                        android:textColor="@color/common_color"
                        android:textSize="@dimen/common_text_size"
                        android:textStyle="bold" />

                    <Spinner
                        android:id="@+id/sp_daoda_xian"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="5dp"
                        android:gravity="center"
                        android:minWidth="40dp"
                        android:text="县"
                        android:textColor="@color/common_color"
                        android:textSize="@dimen/common_text_size"
                        android:textStyle="bold" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout style="@style/StyleLinear">

                <EditText
                    android:id="@+id/et_end_village"
                    style="@style/StyleEdittwo" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:text="乡(镇)"
                    android:textColor="@color/black"
                    android:textSize="@dimen/common_text_size" />

                <EditText
                    android:id="@+id/et_end_other"
                    style="@style/StyleEdittwo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:text="村"
                    android:textColor="@color/black"
                    android:textSize="@dimen/common_text_size" />

            </LinearLayout>


            <LinearLayout style="@style/StyleLinear">

                <TextView
                    style="@style/StyleTextLeft"
                    android:layout_marginRight="5dp"
                    android:text="耳标号:" />

                <TextView
                    android:id="@+id/tv_erbiao"
                    style="@style/StyleEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="160dp" />
            </LinearLayout>

            <Button
                android:id="@+id/bt_erbiao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/button_style"
                android:gravity="center"
                android:text="耳标录入"
                android:textSize="@dimen/common_text_size" />

            <LinearLayout style="@style/StyleLinear">

                <TextView
                    style="@style/StyleTextLeft"
                    android:layout_marginRight="5dp"
                    android:text="官方兽医签字:" />

                <EditText
                    android:id="@+id/et_signature_checked"
                    style="@style/StyleEdit" />
            </LinearLayout>

            <LinearLayout style="@style/StyleLinear">

                <TextView
                    style="@style/StyleTextLeft"
                    android:layout_marginRight="5dp"
                    android:text="签发日期:" />

                <TextView
                    android:id="@+id/tv_prove_time"
                    style="@style/StyleEdit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/common_color"
                    android:textSize="@dimen/common_text_size" />
            </LinearLayout>

            <Button
                android:id="@+id/bt_print"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/button_style"
                android:gravity="center"
                android:text="保存"
                android:textSize="@dimen/common_text_size" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>